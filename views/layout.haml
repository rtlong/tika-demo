%html
  %head
    :css
      th {
        text-align: right;
        padding-right: 10px;
      }
      pre {
        border: black 1px solid;
        padding: 10px;
      }
      .flash {
        margin: 10px;
        padding: 10px;
        border: 1px solid black;
      }
      .flash.error {
        background-color: #f99;
      }
    %link{rel: "shortcut icon", href: "#"}
  %body
    - if @flash
      - @flash.each do |bucket, messages|
        - messages.each do |message|
          .flash{class: bucket}= message

    = yield